{{#if editMode}}
   <div class="pull-left article-content">
    {{#if myself}}
      <div class="wrap-edit">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-3 control-label"> Title</label>
            <div class="col-sm-9">
              <input type="text" value="{{title}}" name="title" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label"> Content</label>
            <div class="col-sm-7">
              <input type="text" value="{{content}}" name="content" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <a href="javascript:void(0)" class="btn-cancel">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    {{/if}}
    <div class="wrap-comment">

    </div>
  </div>
{{else}}
  <div class="pull-left article-content col-md-10">
    <div class="wrap-content-article">
      <a href="javascript:void(0)" class="title-article">{{title}}</a>
      <span class="postby"> _ Post by
        <a href="javascript:void(0)">{{userName}}</a>
      </span>
      <p>{{content}}</p>
      <div class="image-wrap">
        <img class="image" src="{{imageUrl}}">
      </div>
    </div>
    <div class="wrap-comment">

    </div>
  </div>
  <div class="action pull-right col-md-2">
    {{#if myself}}
      <i class="glyphicon glyphicon-pencil btn-edit-article" aria-hidden="true"></i>
      <i class="glyphicon glyphicon-remove btn-delete-article" aria-hidden="true"></i>
    {{/if}}
  </div>
{{/if}}

