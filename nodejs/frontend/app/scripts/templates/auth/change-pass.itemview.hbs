<div id="authen-page">
  <div id="chang-pass">
    <h2>Form Change Password</h2>
    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Current Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="current-password" placeholder="Current Password">
        </div>
      </div>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">New Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="new-password" placeholder="New Password">
        </div>
      </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default btn-save">Save</button>
          </div>
      </div>
    </form>
  </div>
</div>
