<div id="article-form">
   <h2>Form Article</h2>
    <form class="form-horizontal"  enctype="multipart/form-data">
      <div class="form-group">
        <label for="tittle" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="title" placeholder="Title">
        </div>
      </div>
      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
          <textarea  id="content" placeholder="Content" class="form-control"></textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Image</label>
        <div class="col-sm-10">
          <input type="file" id="inputUpload" name="file" multiple="multiple">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default btn-save">Submit</button>
        </div>
      </div>
    </form>
</div>

