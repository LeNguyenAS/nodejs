{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["utils", "server", "db", "helper"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "systemName": "Home",
        "footer": "Created by Le Nguyen",
        "copyright": "2015",
        "navType": "inline",
        "theme": "cerulean",
        "linenums": true,
        "collapseSymbols": true,
        "inverseNav": false
    },
    "opts": {
        //"template": "../node_modules/ink-docstrap/template",  // same as -t templates/default
        "encoding": "utf8",               // same as -e utf8
        "destination": "./out/",          // same as -d ./out/
        "recurse": true             // same as -r
    },
    "plugins": [
        "plugins/markdown"
    ]
}
